<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2f0fb"
    android:orientation="vertical">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/model1"
        style="@style/Widget.Button_ignore"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#266085"
        android:text="常见物品检测"
        android:textSize="23dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.google.android.material.button.MaterialButton
        android:id="@+id/model2"
        style="@style/Widget.Button_ignore"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#266085"
        android:text="主体颜色识别"
        android:textSize="23dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/model1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/model3"
        style="@style/Widget.Button_ignore"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#266085"
        android:text="文字信息提取"
        android:textSize="23dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/model2"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/help_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_phone"
        app:tint="@color/white"
        app:backgroundTint="#fd797a"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
